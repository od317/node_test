<div class="form-row">
    <div class="form-item">
     
            <label>Title</label>
            <input type="text" name="title">
         

    </div>
    <div class="form-item">
       
            <label>Author</label>
            <select name="author" >
            <% authors.forEach(a=>{ %> 
                 <option  label="<%= a.name %> " value="<%= a.id %> "></option>  
            <% }) %> 
            </select>
        
    </div>


    </div>



<div class="form-row">
<div class="form-item">
<label>Date</label>
<input type="date" name="publishDate" >
</div>
<div class="form-item">
    <label>Page count</label>
    <input type="number" min="1" name="pagec">
</div>
</div>


