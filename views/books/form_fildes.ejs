<div>
<label>Title</label>
<input type="text" name="title">
</div>
<div>
<label>Author</label>
<select name="author" >

<% authors.forEach(a=>{ %> 
     <option  label="<%= a.name %> " value="<%= a.id %> "></option>  
 
<% }) %> 
</select>
</div>


<div>
<label>Date</label>
<input type="date" name="publishDate" >
</div>

<div>
    <label>Page count</label>
    <input type="number" min="1" name="pagec">
</div>


<div>
<label>Cover</label>
    <input type="file" name="cover">
</div>    


<div>
        <label>Description</label>
        <textarea  name="desc"></textarea>
</div>
